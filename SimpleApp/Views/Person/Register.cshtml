@model SimpleApp.Data.Domain.Person
@{
    ViewData["Title"] = "Register Person";
}
<div class="jumbotron text-center p-1 m-0">
    <h3>Register Person</h3>
</div>
<div class="row">
    <div class="col-2">
    </div>
    <div class="col-8">
        <form asp-action="Register" asp-controller="Person" method="post">
            @Html.AntiForgeryToken()
            <input asp-for="ID" type="hidden" />
            <div class="form-group">
                <label asp-for="FirstName" class="control-label"></label>
                <input type="text" asp-for="FirstName" class="form-control" value="@Model.FirstName" />
            </div>
            <div class="form-group">
                <label asp-for="LastName" class="control-label"></label>
                <input type="text" asp-for="LastName" class="form-control" value="@Model.LastName" />
            </div>
            <div class="form-group">
                <label asp-for="Mobile" class="control-label"></label>
                <input type="tel" asp-for="Mobile" class="form-control" value="@Model.Mobile" />
            </div>
            <div class="form-group">
                <label asp-for="Birthday" class="control-label"></label>
                <input type="date" asp-for="Birthday" class="form-control" value="@Model.Birthday.ToShortDateString()" />
            </div>
            @if (Model.Gender)
            {
                <div class="form-check-inline">
                    <label class="form-check-label" for="Gender1">
                        <input type="radio" class="form-check-input" id="Gender1" name="Gender" value="true" checked>Male
                    </label>
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label" for="Gender2">
                        <input type="radio" class="form-check-input" id="Gender2" name="Gender" value="false">Female
                    </label>
                </div>
            }
            else
            {
                <div class="form-check-inline">
                    <label class="form-check-label" for="Gender1">
                        <input type="radio" class="form-check-input" id="Gender1" name="Gender" value="true">Male
                    </label>
                </div>
                <div class="form-check-inline">
                    <label class="form-check-label" for="Gender2">
                        <input type="radio" class="form-check-input" id="Gender2" name="Gender" value="false" checked>Female
                    </label>
                </div>
            }
            <div class="form-group" style="margin-top:16px;">
                <label asp-for="Address" class="control-label"></label>
                <textarea asp-for="Address" class="form-control">@Model.Address</textarea>
            </div>

            <div style="margin-top:20px;" class="text-danger" asp-validation-summary="All"></div>

            <div class="form-group">
                <button class="btn btn-primary" type="submit">Submit</button>
            </div>
        </form>
    </div>
    <div class="col-2">
    </div>
</div>

